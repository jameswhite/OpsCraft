# shell fragment included by bootstrap

export PGP='gnupg'
export PKGMANAGER='apt-utils'
export VERSIONCONTROL='git'
export WEBSERVER='apache2'
export RNG='rng-tools'

# functions should be idempotent
install_package(){
    INSTALL=''
    for pkg in $* ;do
      dpkg-query -W -f='${Status} ${Version}\n' ${pkg} > /dev/null || INSTALL="${INSTALL} ${pkg}"
    done
    [ ! -z "${INSTALL}" ] && env DEBIAN_FRONTEND=noninteractive apt-get -y --force-yes -oDpkg::Options::="--force-confdef" -oDpkg::Options::="--force-confold" install "${INSTALL}"
}
